{
  "manifest_version": 3,
  "name": "LumaFrame",
  "version": "1.0",
  "description": "A polished studio-light frame for dark rooms.",
  "browser_specific_settings": {
    "gecko": {
      "id": "lumaframe@praveen-pravi6b.dev",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}